<%
  feature_name ||= "this feature"
  show_link ||= true
%>

<div class="alert alert-warning">
  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
  </svg>
  <div>
    <p class="font-medium">Google account required</p>
    <p class="text-sm opacity-80">
      <%= feature_name.capitalize %> requires a Google account to sync with your personal Google Calendar or Drive.
      <% if show_link %>
        <a href="<%= login_path %>" class="link link-hover underline">Sign in with Google</a> to access this feature.
      <% end %>
    </p>
  </div>
</div>
