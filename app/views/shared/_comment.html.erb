<%
  # Safe check for reply status
  is_reply = comment.respond_to?(:parent_id) && comment.parent_id.present?
  is_top_level = !is_reply
%>
<div class="<%= is_reply ? 'ml-8 border-l-2 border-base-200 pl-4' : '' %>" id="<%= dom_id comment %>">
  <div class="flex gap-3 p-4 <%= is_reply ? 'bg-base-50' : 'bg-base-100' %> rounded-lg">
    <!-- Avatar -->
    <div class="avatar <%= comment.user.avatar_url.blank? ? 'placeholder' : '' %> flex-shrink-0">
      <% if comment.user.avatar_url.present? %>
        <div class="w-8 h-8 rounded-full overflow-hidden">
          <img src="<%= comment.user.avatar_url %>" alt="<%= comment.user.name %>" class="w-full h-full object-cover">
        </div>
      <% else %>
        <div class="bg-neutral text-neutral-content rounded-full w-8 h-8 flex items-center justify-center p-0 m-0">
          <span class="text-xs font-medium leading-none m-0 p-0 flex items-center justify-center w-full h-full"><%= comment.user.name.split.map(&:first).join %></span>
        </div>
      <% end %>
    </div>

    <!-- Comment Content -->
    <div class="flex-1 min-w-0">
      <div class="flex items-center gap-2 mb-1">
        <span class="font-medium text-sm"><%= comment.user.name %></span>
        <span class="text-xs text-base-content/50">â€¢</span>
        <span class="text-xs text-base-content/60"><%= time_ago_in_words(comment.created_at) %> ago</span>

        <!-- Delete Button -->
        <% if comment.user == current_user %>
          <div class="ml-auto">
            <%= button_to polymorphic_path([comment.commentable, comment]),
                        method: :delete,
                        class: "btn btn-ghost btn-xs btn-square hover:bg-error/10 hover:text-error",
                        form: { data: { turbo_confirm: "Are you sure you want to delete this comment?" } },
                        data: { testid: "delete-comment-button-#{comment.id}" } do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
              </svg>
            <% end %>
          </div>
        <% end %>
      </div>

      <p class="text-sm whitespace-pre-line mb-2" data-testid="comment-content"><%= comment.content %></p>
      
      <!-- Comment Actions -->
      <div class="flex items-center gap-4 text-xs">
        <!-- Like Button -->
        <%= render "shared/like_button", likeable: comment, style: :comment %>
        
        <!-- Reply Button (only for top-level comments) -->
        <% if is_top_level %>
          <button class="btn btn-ghost btn-xs gap-1"
                  data-action="click->comments#showReplyForm"
                  data-comment-id="<%= comment.id %>">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6" />
            </svg>
            Reply
          </button>
        <% end %>
      </div>

    </div>
  </div>

  <!-- Replies -->
  <% if is_top_level && comment.respond_to?(:replies) && comment.replies.any? %>
    <div class="ml-8 mt-2 space-y-2">
      <% comment.replies.reorder(created_at: :asc).each do |reply| %>
        <%= render "shared/comment", comment: reply %>
      <% end %>
    </div>
  <% end %>

  <!-- Reply Form (hidden by default, appears after replies) -->
  <% if is_top_level %>
    <div id="reply-form-<%= comment.id %>" class="hidden mt-4 ml-8">
      <%= render "shared/comment_form", commentable: comment.commentable, comment: Comment.new, parent_comment: comment %>
    </div>
  <% end %>
</div>