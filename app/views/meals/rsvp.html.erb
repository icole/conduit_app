<div>
  <!-- Back Link -->
  <div class="mb-6">
    <%= link_to meal_path(@meal), class: "btn btn-ghost btn-sm gap-2 pl-0" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      Back to Meal
    <% end %>
  </div>

  <div class="mb-6">
    <h1 class="text-2xl font-bold mb-2"><%= @meal.title %></h1>
    <div class="text-lg text-base-content/70">
      <%= @meal.scheduled_at.strftime("%A, %B %d at %l:%M %p") %>
    </div>
  </div>

  <%= render "rsvp_form", meal: @meal, my_rsvp: @my_rsvp %>
</div>
