<div class="container mx-auto max-w-2xl px-4 py-8">
  <div class="mb-6">
    <%= link_to meals_back_path, class: "btn btn-ghost btn-sm gap-2" do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
      </svg>
      Back
    <% end %>
  </div>

  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <h1 class="card-title text-2xl">Create New Meal</h1>
      <p class="text-base-content/70">Schedule a community meal that isn't part of a recurring schedule.</p>

      <div class="divider"></div>

      <%= render "form" %>
    </div>
  </div>
</div>
