<% current_view = local_assigns[:current_view] || "list" %>
<div class="join">
  <%= link_to meals_path, class: "join-item btn btn-sm #{current_view == 'list' ? 'btn-active' : 'btn-ghost'}" do %>
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"/>
    </svg>
    <span class="hidden sm:inline">List</span>
  <% end %>
  <%= link_to calendar_meals_path, class: "join-item btn btn-sm #{current_view == 'calendar' ? 'btn-active' : 'btn-ghost'}" do %>
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
    </svg>
    <span class="hidden sm:inline">Calendar</span>
  <% end %>
</div>
