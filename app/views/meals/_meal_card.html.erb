<%
  is_today = meal.scheduled_date == Date.current
  is_tomorrow = meal.scheduled_date == Date.current.tomorrow
  needs_cook = meal.needs_head_cook?
  user_is_cook = meal.user_is_cook?(current_user)
  user_attending = meal.user_attending?(current_user)
  user_maybe = meal.user_maybe?(current_user)
  user_declined = meal.user_declined?(current_user)
  rsvps_open = meal.rsvps_open?

  border_class = if meal.cancelled?
    "border-error/50 opacity-60"
  elsif needs_cook
    "border-warning"
  elsif is_today
    "border-primary"
  else
    "border-base-300"
  end
%>

<div id="meal_<%= meal.id %>" class="card bg-base-100 shadow-lg border-l-4 <%= border_class %>">
  <div class="card-body">
    <!-- Date & Time Header -->
    <div class="flex justify-between items-start gap-3">
      <div class="min-w-0 flex-1">
        <div class="text-sm font-semibold text-base-content">
          <% if is_today %>
            Today
          <% elsif is_tomorrow %>
            Tomorrow
          <% else %>
            <%= meal.scheduled_at.strftime("%A, %b %d") %>
          <% end %>
        </div>
        <h2 class="card-title text-lg mt-1">
          <%= link_to meal.title, meal_path(meal), class: "link link-hover truncate block" %>
        </h2>
      </div>
      <div class="text-right flex-shrink-0">
        <div class="badge badge-ghost"><%= meal.time_display %></div>
        <% if meal.cancelled? %>
          <div class="badge badge-error mt-1">Cancelled</div>
        <% elsif !rsvps_open %>
          <div class="badge badge-warning mt-1">RSVPs Closed</div>
        <% end %>
      </div>
    </div>

    <!-- Location -->
    <% if meal.location.present? %>
      <div class="flex items-center gap-2 text-sm text-base-content/70">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
        </svg>
        <%= meal.location %>
      </div>
    <% end %>

    <!-- Menu -->
    <% if meal.menu.present? %>
      <div class="mt-2 p-2 bg-base-200 rounded-lg">
        <div class="flex items-start gap-2 text-sm">
          <svg class="w-4 h-4 flex-shrink-0 mt-0.5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
          </svg>
          <span class="line-clamp-2"><%= meal.menu %></span>
        </div>
      </div>
    <% end %>

    <!-- Cooks Section -->
    <div class="mt-3">
      <div class="text-sm font-medium mb-2">Cooks:</div>
      <% if meal.cooks.any? %>
        <div class="flex flex-wrap gap-2">
          <% meal.meal_cooks.includes(:user).each do |mc| %>
            <div class="badge badge-outline gap-1 <%= mc.head_cook? ? 'badge-primary' : '' %>">
              <% if mc.head_cook? %>
                <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              <% end %>
              <%= mc.user.name %>
            </div>
          <% end %>
        </div>
        <% if needs_cook %>
          <div class="text-warning text-sm flex items-center gap-1 mt-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
            </svg>
            Needs head cook!
          </div>
        <% end %>
      <% else %>
        <div class="text-warning text-sm flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
          </svg>
          Needs volunteers!
        </div>
      <% end %>
    </div>

    <!-- Attendees Count -->
    <div class="mt-2 text-sm text-base-content/70">
      <span class="font-medium"><%= meal.total_attendees %></span> attending
      <% if meal.guests_count > 0 %>
        (including <%= meal.guests_count %> guests)
      <% end %>
    </div>

    <!-- Action Buttons -->
    <div class="card-actions justify-end mt-4">
      <% if user_is_cook %>
        <span class="badge badge-success">You're cooking!</span>
      <% elsif user_attending %>
        <span class="badge badge-info">You're attending</span>
      <% elsif user_maybe %>
        <span class="badge badge-warning">Maybe</span>
      <% elsif user_declined %>
        <span class="badge badge-ghost">Can't make it</span>
      <% elsif !meal.cancelled? && rsvps_open %>
        <% if meal.cook_slots_available? %>
          <!-- Mobile Button -->
          <%= link_to cook_meal_path(meal), class: "btn btn-sm btn-outline lg:hidden" do %>
            Volunteer to Cook
          <% end %>
          <!-- Desktop Button -->
          <%= link_to meal_path(meal, anchor: "cook_signup"), class: "btn btn-sm btn-outline hidden lg:inline-flex" do %>
            Volunteer to Cook
          <% end %>
        <% end %>

        <!-- Mobile Button -->
        <%= link_to rsvp_meal_path(meal), class: "btn btn-sm btn-primary lg:hidden" do %>
          RSVP
        <% end %>
        <!-- Desktop Button -->
        <%= link_to meal_path(meal, anchor: "rsvp_form"), class: "btn btn-sm btn-primary hidden lg:inline-flex" do %>
          RSVP
        <% end %>
      <% end %>
    </div>
  </div>
</div>
