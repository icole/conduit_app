<div class="container mx-auto max-w-2xl px-4 py-8">
  <!-- Header -->
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold">Notifications</h1>
      <p class="text-base-content/70 mt-1">
        <% if @unread_count > 0 %>
          You have <%= @unread_count %> unread notification<%= @unread_count == 1 ? '' : 's' %>
        <% else %>
          All caught up!
        <% end %>
      </p>
    </div>
    <% if @unread_count > 0 %>
      <%= button_to mark_all_read_notifications_path, method: :post, class: "btn btn-ghost btn-sm" do %>
        Mark all as read
      <% end %>
    <% end %>
  </div>

  <!-- Notifications List -->
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body p-0">
      <% if @notifications.any? %>
        <div class="divide-y divide-base-200">
          <% @notifications.each do |notification| %>
            <%= render "notification", notification: notification %>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12 text-base-content/50">
          <div class="text-5xl mb-4">ðŸ””</div>
          <h3 class="text-lg font-medium mb-2">No notifications yet</h3>
          <p>We'll notify you about upcoming meals and RSVPs here.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
