<div class="max-w-md mx-auto p-6 bg-white rounded-lg shadow-lg mt-10">
  <h1 class="text-2xl font-bold mb-6">Create Invitation</h1>

  <%= form_with(model: @invitation, local: true) do |form| %>
    <% if @invitation.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <h2 class="font-bold"><%= pluralize(@invitation.errors.count, "error") %> prohibited this invitation from being saved:</h2>
        <ul class="list-disc ml-5">
          <% @invitation.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :expires_at, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.date_field :expires_at, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "Enter expiration date" %>
    </div>

    <div class="flex items-center justify-between">
      <%= form.submit "Create", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      <%= link_to "Cancel", invitations_path, class: "text-blue-500 hover:text-blue-700" %>
    </div>
  <% end %>
</div>
