<div class="container mx-auto px-4 py-8">
  <div class="max-w-md mx-auto">
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h1 class="card-title">Create Invitation</h1>

        <%= form_with(model: @invitation, local: true) do |form| %>
          <% if @invitation.errors.any? %>
            <div class="alert alert-error mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <div>
                <h3 class="font-bold"><%= pluralize(@invitation.errors.count, "error") %> prohibited this invitation from being saved:</h3>
                <ul class="list-disc pl-5 mt-2">
                  <% @invitation.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          <% end %>

          <div class="form-control mb-4">
            <%= form.label :expires_at, class: "label" do %>
              <span class="label-text">Expiration Date</span>
            <% end %>
            <%= form.date_field :expires_at, class: "input input-bordered w-full", placeholder: "Enter expiration date" %>
          </div>

          <div class="flex items-center justify-between gap-4">
            <%= form.submit "Create", class: "btn btn-primary" %>
            <%= link_to "Cancel", invitations_path, class: "btn btn-outline" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
