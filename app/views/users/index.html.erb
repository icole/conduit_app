
<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">User Management</h1>
  </div>

  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <div class="overflow-x-auto">
        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Admin</th>
              <th>Provider</th>
              <th>Created</th>
              <th>Last Active</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr class="hover">
                <td>
                  <div class="flex items-center gap-3">
                    <% if user.avatar_url.present? %>
                      <div class="avatar">
                        <div class="w-10 h-10 rounded-full">
                          <img src="<%= user.avatar_url %>" alt="<%= user.name %>">
                        </div>
                      </div>
                    <% else %>
                      <div class="avatar placeholder">
                        <div class="bg-neutral text-neutral-content w-10 h-10 rounded-full">
                          <span class="text-sm"><%= user.name.first(2).upcase %></span>
                        </div>
                      </div>
                    <% end %>
                    <div class="font-medium"><%= user.name %></div>
                  </div>
                </td>
                <td><%= user.email %></td>
                <td>
                  <% if user.admin? %>
                    <span class="badge badge-success">Yes</span>
                  <% else %>
                    <span class="badge badge-ghost">No</span>
                  <% end %>
                </td>
                <td><%= user.provider || "Email" %></td>
                <td><%= user.created_at.strftime("%b %d, %Y") %></td>
                <td>
                  <% if user.last_active_at %>
                    <% time_ago = time_ago_in_words(user.last_active_at) %>
                    <% if user.last_active_at > 5.minutes.ago %>
                      <span class="text-success font-medium">Online</span>
                    <% elsif user.last_active_at > 1.day.ago %>
                      <span class="text-base-content"><%= time_ago %> ago</span>
                    <% elsif user.last_active_at > 7.days.ago %>
                      <span class="text-base-content/70"><%= time_ago %> ago</span>
                    <% else %>
                      <span class="text-base-content/50"><%= user.last_active_at.strftime("%b %d, %Y") %></span>
                    <% end %>
                  <% else %>
                    <span class="text-base-content/50">Never</span>
                  <% end %>
                </td>
                <td>
                  <%= link_to "Edit", edit_user_path(user), class: "btn btn-ghost btn-sm" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
