<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-semibold mb-6">Edit User</h1>

  <div class="card bg-base-100 shadow-xl mb-6">
    <div class="card-body">
      <%= form_with(model: @user, html: { class: "space-y-6" }) do |form| %>
        <% if @user.errors.any? %>
          <div class="alert alert-error">
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <h3 class="font-bold"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h3>
              <ul class="list-disc pl-5 mt-2">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>

        <div class="form-control">
          <%= form.label :name, class: "label" do %>
            <span class="label-text">Name</span>
          <% end %>
          <%= form.text_field :name, class: "input input-bordered w-full" %>
        </div>

        <div class="form-control">
          <%= form.label :email, class: "label" do %>
            <span class="label-text">Email</span>
          <% end %>
          <%= form.email_field :email, class: "input input-bordered w-full" %>
        </div>

        <div class="form-control">
          <label class="label cursor-pointer justify-start gap-3">
            <%= form.check_box :admin, class: "checkbox" %>
            <span class="label-text">Administrator Access</span>
          </label>
        </div>

        <div class="flex justify-between gap-4">
          <%= form.submit "Update User", class: "btn btn-primary" %>
          <%= link_to "Back to Users", users_path, class: "btn btn-outline" %>
        </div>
      <% end %>
    </div>
  </div>

  <% if @user != current_user %>
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title text-error">Danger Zone</h2>
        <p class="text-base-content/70 mb-4">Be careful with these actions, they cannot be undone.</p>
        
        <% if !@user.admin? %>
          <%= button_to "Delete User", user_path(@user), method: :delete, 
              data: { confirm: "Are you sure you want to delete this user? This action cannot be undone and will remove all associated data." }, 
              class: "btn btn-error" %>
        <% else %>
          <p class="text-base-content/50">Admin users cannot be deleted through this interface.</p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
