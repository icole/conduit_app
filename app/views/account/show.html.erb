<div class="container mx-auto px-4 py-8 max-w-2xl">
  <h1 class="text-3xl font-semibold mb-6">Account Settings</h1>

  <!-- Profile Info -->
  <div class="card bg-base-100 shadow-xl mb-6">
    <div class="card-body">
      <h2 class="card-title">Profile</h2>

      <div class="space-y-4 mt-4">
        <div class="flex items-center gap-4">
          <% if @user.avatar_url.present? %>
            <%= image_tag @user.avatar_url, class: "w-16 h-16 rounded-full", alt: @user.name %>
          <% else %>
            <div class="w-16 h-16 rounded-full bg-primary text-primary-content flex items-center justify-center text-2xl font-bold">
              <%= @user.name.first.upcase %>
            </div>
          <% end %>
          <div class="flex-grow">
            <%= turbo_frame_tag "user_name_edit" do %>
              <div class="flex items-center gap-2">
                <p class="font-semibold text-lg"><%= @user.name %></p>
                <%= link_to edit_profile_path, class: "btn btn-ghost btn-xs btn-circle", title: "Edit name" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                  </svg>
                <% end %>
              </div>
            <% end %>
            <p class="text-base-content/70"><%= @user.email %></p>
          </div>
        </div>

        <!-- Dietary Needs -->
        <div class="border-t border-base-200 pt-4">
          <h3 class="font-medium text-sm text-base-content/70 mb-2">Dietary Needs</h3>
          <p class="text-xs text-base-content/50 mb-3">Help cooks plan meals by sharing any dietary restrictions, allergies, or preferences.</p>

          <%= form_with model: @user, url: profile_path, method: :patch do |f| %>
            <%= f.hidden_field :name, value: @user.name %>
            <div class="form-control">
              <%= f.text_area :dietary_needs,
                  class: "textarea textarea-bordered w-full text-sm",
                  placeholder: "Allergies, intolerances, diet preferences, food aversions...",
                  rows: 3 %>
            </div>
            <div class="form-control mt-3">
              <%= f.submit "Save Dietary Needs", class: "btn btn-primary btn-sm" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Google Account Linking -->
  <div class="card bg-base-100 shadow-xl mb-6">
    <div class="card-body">
      <h2 class="card-title">Google Account</h2>

      <% if google_account? %>
        <div class="flex items-center gap-3 mt-4 p-4 bg-success/10 rounded-lg">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <div class="flex-grow">
            <p class="font-medium text-success">Google account connected</p>
            <p class="text-sm text-base-content/70">You have full access to Google Calendar and Drive features.</p>
          </div>
        </div>
      <% else %>
        <div class="mt-4">
          <div class="flex items-start gap-3 p-4 bg-warning/10 rounded-lg mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-warning shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            <div>
              <p class="font-medium">No Google account linked</p>
              <p class="text-sm text-base-content/70">Link your Google account to access Calendar and Drive integrations.</p>
            </div>
          </div>

          <%= form_with url: "/auth/google_oauth2", method: :post, data: { turbo: false } do |f| %>
            <%= hidden_field_tag :link_account, "true" %>
            <button type="submit" class="btn btn-primary">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 48 48">
                <path fill="#FFC107" d="M43.611,20.083H42V20H24v8h11.303c-1.649,4.657-6.08,8-11.303,8c-6.627,0-12-5.373-12-12c0-6.627,5.373-12,12-12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C12.955,4,4,12.955,4,24c0,11.045,8.955,20,20,20c11.045,0,20-8.955,20-20C44,22.659,43.862,21.35,43.611,20.083z"/>
                <path fill="#FF3D00" d="M6.306,14.691l6.571,4.819C14.655,15.108,18.961,12,24,12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C16.318,4,9.656,8.337,6.306,14.691z"/>
                <path fill="#4CAF50" d="M24,44c5.166,0,9.86-1.977,13.409-5.192l-6.19-5.238C29.211,35.091,26.715,36,24,36c-5.202,0-9.619-3.317-11.283-7.946l-6.522,5.025C9.505,39.556,16.227,44,24,44z"/>
                <path fill="#1976D2" d="M43.611,20.083H42V20H24v8h11.303c-0.792,2.237-2.231,4.166-4.087,5.571c0.001-0.001,0.002-0.001,0.003-0.002l6.19,5.238C36.971,39.205,44,34,44,24C44,22.659,43.862,21.35,43.611,20.083z"/>
              </svg>
              Link Google Account
            </button>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Password Management -->
  <div class="card bg-base-100 shadow-xl mb-6">
    <div class="card-body">
      <h2 class="card-title">Password</h2>

      <div id="password-change-section" class="mt-4">
        <% if @user.password_digest.present? %>
          <!-- User has a password, show change password form -->
          <p class="text-base-content/70 mb-4">Change your password to keep your account secure.</p>

          <%= form_with url: update_password_path, method: :patch, local: true, data: { controller: "password-change" } do |f| %>
            <div class="space-y-4">
              <div class="form-control">
                <%= f.label :current_password, "Current Password", class: "label" %>
                <%= f.password_field :current_password, class: "input input-bordered w-full", required: true %>
              </div>

              <div class="form-control">
                <%= f.label :new_password, "New Password", class: "label" %>
                <%= f.password_field :new_password, class: "input input-bordered w-full", required: true, minlength: 6, data: { password_change_target: "newPassword" } %>
                <label class="label">
                  <span class="label-text-alt text-base-content/50">Minimum 6 characters</span>
                </label>
              </div>

              <div class="form-control">
                <%= f.label :new_password_confirmation, "Confirm New Password", class: "label" %>
                <%= f.password_field :new_password_confirmation, class: "input input-bordered w-full", required: true, data: { password_change_target: "confirmPassword", action: "input->password-change#validateMatch" } %>
                <label class="label">
                  <span class="label-text-alt text-error" data-password-change-target="errorMessage"></span>
                </label>
              </div>

              <div class="form-control mt-6">
                <%= f.submit "Update Password", class: "btn btn-primary", data: { password_change_target: "submitButton" } %>
              </div>
            </div>
          <% end %>
        <% else %>
          <!-- User doesn't have a password (OAuth only), show set password form -->
          <div class="alert alert-info mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-info shrink-0 w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div>
              <h3 class="font-bold">Set a password to enable email login</h3>
              <p class="text-sm">You're currently using Google sign-in. Set a password to also sign in with your email address.</p>
            </div>
          </div>

          <%= form_with url: set_password_path, method: :patch, local: true, data: { controller: "password-change" } do |f| %>
            <div class="space-y-4">
              <div class="form-control">
                <%= f.label :new_password, "New Password", class: "label" %>
                <%= f.password_field :new_password, class: "input input-bordered w-full", required: true, minlength: 6, data: { password_change_target: "newPassword" } %>
                <label class="label">
                  <span class="label-text-alt text-base-content/50">Minimum 6 characters</span>
                </label>
              </div>

              <div class="form-control">
                <%= f.label :new_password_confirmation, "Confirm New Password", class: "label" %>
                <%= f.password_field :new_password_confirmation, class: "input input-bordered w-full", required: true, data: { password_change_target: "confirmPassword", action: "input->password-change#validateMatch" } %>
                <label class="label">
                  <span class="label-text-alt text-error" data-password-change-target="errorMessage"></span>
                </label>
              </div>

              <div class="form-control mt-6">
                <%= f.submit "Set Password", class: "btn btn-primary", data: { password_change_target: "submitButton" } %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- What You Get Section -->
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title">Feature Access</h2>

      <div class="overflow-x-auto mt-4">
        <table class="table">
          <thead>
            <tr>
              <th>Feature</th>
              <th class="text-center">Email Account</th>
              <th class="text-center">Google Account</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Posts, Comments, Likes</td>
              <td class="text-center text-success">✓</td>
              <td class="text-center text-success">✓</td>
            </tr>
            <tr>
              <td>Tasks & Assignments</td>
              <td class="text-center text-success">✓</td>
              <td class="text-center text-success">✓</td>
            </tr>
            <tr>
              <td>Discussion Topics</td>
              <td class="text-center text-success">✓</td>
              <td class="text-center text-success">✓</td>
            </tr>
            <tr>
              <td>Chores</td>
              <td class="text-center text-success">✓</td>
              <td class="text-center text-success">✓</td>
            </tr>
            <tr>
              <td>Mailing Lists</td>
              <td class="text-center text-success">✓</td>
              <td class="text-center text-success">✓</td>
            </tr>
            <tr>
              <td>Google Calendar Sync</td>
              <td class="text-center text-base-content/30">—</td>
              <td class="text-center text-success">✓</td>
            </tr>
            <tr>
              <td>Google Drive Access</td>
              <td class="text-center text-base-content/30">—</td>
              <td class="text-center text-success">✓</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Danger Zone -->
  <div class="card bg-base-100 shadow-xl mt-6 border border-error/20">
    <div class="card-body">
      <h2 class="card-title text-error">Danger Zone</h2>
      <p class="text-base-content/70 mt-2">
        Once you delete your account, there is no going back. Please be certain.
      </p>
      <div class="mt-4">
        <%= link_to "Delete my account", delete_account_path, class: "btn btn-outline btn-error" %>
      </div>
    </div>
  </div>
</div>
