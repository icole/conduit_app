<div id="<%= dom_id task %>" class="badge badge-lg gap-2 <%= task.status == 'completed' ? 'badge-neutral opacity-70' : 'badge-outline' %>">
  <div class="flex items-center gap-1">
    <%= form_with(model: task, method: :patch, class: "inline-flex") do |form| %>
      <%= form.hidden_field :status, value: task.status == 'completed' ? 'pending' : 'completed' %>
      <button type="submit" class="p-0 hover:text-primary-content" title="<%= task.status == 'completed' ? 'Mark Pending' : 'Complete' %>">
        <% if task.status == 'completed' %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
          </svg>
        <% else %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        <% end %>
      </button>
    <% end %>

    <span class="truncate max-w-[120px]" title="<%= task.title %>"><%= task.title %></span>

    <div class="flex gap-1">
      <%= link_to edit_task_path(task), class: "hover:text-primary-content", title: "Edit", data: { turbo_frame: "_top" } do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
      <% end %>

      <%= button_to task_path(task), method: :delete, class: "hover:text-primary-content", title: "Delete", form: { data: { turbo_confirm: 'Are you sure?' } } do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
      <% end %>
    </div>
  </div>
</div>
