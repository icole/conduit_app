<% content_for :title, "Edit Task" %>

<div class="container mx-auto max-w-4xl px-4 py-8">
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <% unless turbo_native_app? %>
        <div class="flex justify-between items-center mb-6">
          <h2 class="card-title text-2xl font-bold">Edit Task</h2>
          <div class="flex gap-2">
            <%= link_to tasks_path, class: "btn btn-outline btn-sm" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
              </svg>
              Back to Tasks
            <% end %>
          </div>
        </div>
      <% end %>
      
      <div class="card border border-base-300 rounded-lg p-4 mb-6">
        <%= form_with(model: @task, url: task_path(@task, return_to: tasks_path), method: :patch, data: { turbo: false }) do |form| %>
          <% if @task.errors.any? %>
            <div class="alert alert-error mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
              <div>
                <h3 class="font-bold">Please fix the following errors:</h3>
                <ul class="list-disc list-inside">
                  <% @task.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          <% end %>

          <div class="form-control w-full mb-4">
            <%= form.label :title, class: "label" %>
            <%= form.text_field :title, class: "input input-bordered w-full", required: true %>
          </div>


          <div class="form-control w-full mb-4" data-controller="date-field">
            <%= form.label :due_date, "Due Date (optional)", class: "label" %>
            <%= form.date_field :due_date, class: "input input-bordered w-full cursor-pointer", data: { date_field_target: "input", action: "click->date-field#openDatePicker" } %>
          </div>

          <%# Show user assignment on the edit page %>
          <%= render "tasks/user_select", form: form, task: @task, users: @users %>

          <div class="form-control w-full mb-4">
            <%= form.label :status, class: "label" %>
            <%= form.select :status, [['Backlog', 'backlog'], ['Active', 'active'], ['Completed', 'completed']], {}, class: "select select-bordered w-full" %>
          </div>

          <div class="flex justify-end gap-2 mt-6">
            <%= link_to "Cancel", tasks_path, class: "btn btn-ghost" %>
            <%= form.submit "Update Task", class: "btn btn-primary" %>
          </div>
          
          <%= hidden_field_tag :return_to, tasks_path %>
        <% end %>
      </div>
    </div>
  </div>
</div>
