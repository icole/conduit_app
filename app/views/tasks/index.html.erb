<div class="container mx-auto max-w-7xl px-4 py-8" data-controller="tasks sortable">
  <div class="flex justify-between items-center mb-6">
    <h2 class="text-2xl font-bold">Community Tasks</h2>
    <button class="btn btn-primary" data-action="click->tasks#showForm" title="New Task">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
      </svg>
      New Task
    </button>
  </div>

  <!-- Filter tabs -->
  <div class="tabs tabs-boxed mb-6 w-fit">
    <%= link_to tasks_path(view: "active"), 
        class: "tab #{'tab-active' if @current_view == 'active'}" do %>
      Active (<%= @active_tasks.count %>)
    <% end %>
    <%= link_to tasks_path(view: "backlog"), 
        class: "tab #{'tab-active' if @current_view == 'backlog'}" do %>
      Backlog (<%= @backlog_tasks.count %>)
    <% end %>
    <%= link_to tasks_path(view: "completed"), 
        class: "tab #{'tab-active' if @current_view == 'completed'}" do %>
      Completed (<%= @completed_tasks.count %>)
    <% end %>
    <%= link_to tasks_path(view: "overdue"), 
        class: "tab #{'tab-active' if @current_view == 'overdue'}" do %>
      Overdue (<%= Task.overdue.count %>)
    <% end %>
    <%= link_to tasks_path(view: "due_soon"), 
        class: "tab #{'tab-active' if @current_view == 'due_soon'}" do %>
      Due Soon (<%= Task.due_soon.count %>)
    <% end %>
  </div>

  <!-- Assignment filter -->
  <div class="flex flex-wrap gap-2 mb-6">
    <div class="dropdown">
      <label tabindex="0" class="btn btn-outline btn-sm">
        Assigned To: <%= params[:assigned_to] == current_user.id.to_s ? 'Me' : (params[:assigned_to] == 'unassigned' ? 'Unassigned' : (User.find_by(id: params[:assigned_to])&.name || 'All')) %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
      </label>
      <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-52">
        <li><%= link_to "All", tasks_path(view: @current_view) %></li>
        <li><%= link_to "Me", tasks_path(view: @current_view, assigned_to: current_user.id) %></li>
        <li><%= link_to "Unassigned", tasks_path(view: @current_view, assigned_to: "unassigned") %></li>
        <% User.where.not(id: current_user.id).each do |user| %>
          <li><%= link_to user.name, tasks_path(view: @current_view, assigned_to: user.id) %></li>
        <% end %>
      </ul>
    </div>

    <% if params[:assigned_to].present? %>
      <%= link_to tasks_path(view: @current_view), class: "btn btn-ghost btn-sm" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
        Clear Filter
      <% end %>
    <% end %>
  </div>

  <!-- New task form -->
  <div id="new-task-form" class="<%= 'hidden' unless @task&.errors&.any? %> mb-6">
    <div class="card bg-base-100 border border-base-300 rounded-lg p-4">
      <%= turbo_frame_tag "new_task" do %>
        <%= render "tasks/form", task: Task.new %>
      <% end %>
    </div>
  </div>

  <% if @current_view == "active" %>
    <!-- Active Only View -->
    <div class="grid grid-cols-1 gap-6">
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h3 class="card-title text-lg mb-4">
            ðŸŽ¯ Active (Prioritized)
            <span class="badge badge-primary"><%= @active_tasks.count %></span>
          </h3>
          
          <% if @active_tasks.any? %>
            <div class="flex items-center gap-2 mb-4 text-sm text-base-content/60">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4" />
              </svg>
              <span>Drag cards to reorder priority</span>
            </div>
          <% end %>
          
          <div data-controller="sortable" data-sortable-target="list" class="sortable-list space-y-2">
            <% @active_tasks.each_with_index do |task, index| %>
              <%= render "tasks/task_card", task: task, show_move_to_backlog: true, priority_index: index + 1 %>
            <% end %>
            
            <% if @active_tasks.empty? %>
              <div class="text-center p-8 text-base-content/50">
                <div class="text-2xl mb-2">ðŸŽ¯</div>
                <p>No active tasks</p>
                <p class="text-sm">
                  <%= link_to "Browse backlog", tasks_path(view: "backlog"), class: "link link-primary" %> to prioritize tasks
                </p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% elsif @current_view == "backlog" %>
    <!-- Backlog Only View -->
    <div class="grid grid-cols-1 gap-6">
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h3 class="card-title text-lg mb-4">
            ðŸ“‹ Backlog
            <span class="badge badge-ghost"><%= @backlog_tasks.count %></span>
          </h3>

          <% if @backlog_tasks.any? %>
            <div class="flex items-center gap-2 mb-4 text-sm text-base-content/60">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4" />
              </svg>
              <span>Drag cards to reorder priority</span>
            </div>
          <% end %>
          
          <div class="space-y-2">
            <% @backlog_tasks.each do |task| %>
              <%= render "tasks/task_card", task: task, show_prioritize: true %>
            <% end %>
            
            <% if @backlog_tasks.empty? %>
              <div class="text-center p-8 text-base-content/50">
                <div class="text-2xl mb-2">ðŸ“‹</div>
                <p>No tasks in backlog</p>
                <p class="text-sm">All tasks have been prioritized!</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <!-- Single column view for other filters -->
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h3 class="card-title text-lg mb-4">
          <%= @current_view.titleize %> Tasks
          <span class="badge badge-ghost"><%= @tasks.count %></span>
        </h3>
        
        <% if @tasks.any? %>
          <div class="space-y-2">
            <% @tasks.each do |task| %>
              <%= render "tasks/task_card", task: task %>
            <% end %>
          </div>
        <% else %>
          <div class="text-center p-8 text-base-content/50">
            <div class="text-4xl mb-4">ðŸ“‹</div>
            <h3 class="text-xl font-medium mb-2">No tasks found</h3>
            <p class="text-base-content/70 mb-4">You don't have any <%= @current_view.titleize %> tasks yet.</p>
            <button class="btn btn-primary" data-action="click->tasks#showForm">Create a new task</button>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

