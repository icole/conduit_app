<div id="<%= dom_id task %>" 
     class="card bg-base-100 border border-base-200 hover:border-base-300 transition-colors <%= defined?(priority_index) && priority_index ? 'cursor-grab active:cursor-grabbing' : '' %>"
     data-task-id="<%= task.id %>">
  <div class="card-body p-4">
    <!-- Task Header with Priority and Status -->
    <div class="flex items-start justify-between mb-2">
      <div class="flex items-center gap-2">
        <!-- Priority indicator for active tasks -->
        <% if defined?(priority_index) && priority_index %>
          <span class="badge badge-primary badge-sm font-bold"><%= priority_index %></span>
        <% end %>
        
        <!-- Status indicator -->
        <% if task.status == 'completed' %>
          <span class="badge badge-success badge-sm">âœ“ Completed</span>
        <% elsif task.status == 'active' %>
          <span class="badge badge-warning badge-sm">ðŸŽ¯ Active</span>
        <% else %>
          <span class="badge badge-ghost badge-sm">ðŸ“‹ Backlog</span>
        <% end %>
      </div>
      
      <!-- Due date indicator -->
      <% if task.due_date %>
        <div class="text-xs">
          <% if task.overdue? %>
            <span class="badge badge-error badge-sm">
              ðŸ“… Overdue (<%= task.due_date.strftime("%m/%d") %>)
            </span>
          <% elsif task.due_soon? %>
            <span class="badge badge-warning badge-sm">
              ðŸ“… Due <%= task.due_date.strftime("%m/%d") %>
            </span>
          <% else %>
            <span class="badge badge-ghost badge-sm">
              ðŸ“… <%= task.due_date.strftime("%m/%d/%Y") %>
            </span>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Task Title and Description -->
    <div class="mb-3">
      <h4 class="font-semibold text-base mb-1 <%= task.status == 'completed' ? 'line-through text-base-content/70' : '' %>">
        <%= task.title %>
      </h4>
      <% if task.description.present? %>
        <p class="text-sm text-base-content/70 <%= task.status == 'completed' ? 'line-through' : '' %>">
          <%= truncate(task.description, length: 100) %>
        </p>
      <% end %>
    </div>

    <!-- Assignment and Creator Info -->
    <div class="flex flex-wrap gap-2 mb-3">
      <% if task.assigned_to_user.present? %>
        <span class="badge badge-ghost badge-sm">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          <%= task.assigned_to_user.name %>
        </span>
      <% end %>
      
      <% if task.user != current_user %>
        <span class="badge badge-outline badge-sm">
          by <%= task.user.name %>
        </span>
      <% end %>
    </div>

    <!-- Action Buttons -->
    <div class="flex items-center justify-between">
      <div class="flex gap-1">
        <!-- Complete/Uncomplete Toggle -->
        <%= form_with(model: task, method: :patch, class: "inline-flex") do |form| %>
          <%= form.hidden_field :status, value: task.status == 'completed' ? (task.priority_order ? 'active' : 'backlog') : 'completed' %>
          <button type="submit" class="btn btn-ghost btn-xs" title="<%= task.status == 'completed' ? 'Mark Incomplete' : 'Complete' %>">
            <% if task.status == 'completed' %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
              </svg>
            <% else %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            <% end %>
          </button>
        <% end %>

        <!-- Edit Button -->
        <%= link_to edit_task_path(task), class: "btn btn-ghost btn-xs", title: "Edit" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
        <% end %>

        <!-- Delete Button -->
        <%= button_to task_path(task), method: :delete, 
            class: "btn btn-ghost btn-xs", 
            title: "Delete", 
            form: { data: { turbo_confirm: 'Are you sure?' } } do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
          </svg>
        <% end %>
      </div>

      <!-- Status Management Buttons -->
      <div class="flex gap-1">
        <!-- Prioritize Button (for backlog tasks) -->
        <% if defined?(show_prioritize) && show_prioritize && task.status == 'backlog' %>
          <%= button_to prioritize_task_path(task), method: :patch, 
              class: "btn btn-primary btn-xs", 
              title: "Move to Active List" do %>
            ðŸŽ¯ Activate
          <% end %>
        <% end %>

        <!-- Move to Backlog Button (for active tasks) -->
        <% if defined?(show_move_to_backlog) && show_move_to_backlog && task.status == 'active' %>
          <%= button_to move_to_backlog_task_path(task), method: :patch, 
              class: "btn btn-ghost btn-xs", 
              title: "Move back to Backlog" do %>
            ðŸ“‹ To Backlog
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>