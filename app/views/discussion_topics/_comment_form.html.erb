<%= form_with(model: [discussion_topic, topic_comment], data: { turbo_frame: "comments" }) do |form| %>
  <% if topic_comment.errors.any? %>
    <div class="alert alert-error mb-4">
      <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
      <div>
        <h3 class="font-bold">Please fix the errors:</h3>
        <ul class="list-disc list-inside">
          <% topic_comment.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="form-control w-full mb-4">
    <%= form.text_area :content, rows: 4, placeholder: "Share your thoughts...", 
                     class: "textarea textarea-bordered w-full focus:outline-none focus:border-base-300 p-3" %>
  </div>
  <div class="flex justify-end gap-2">
    <button type="button" class="btn btn-ghost" data-action="click->comments#hideForm">Cancel</button>
    <%= form.submit "Post Comment", class: "btn btn-primary" %>
  </div>
<% end %>
