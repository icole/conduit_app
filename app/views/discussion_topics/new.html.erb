<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <div class="card bg-base-100 shadow-sm">
      <div class="card-body">
        <h1 class="card-title text-2xl mb-6">New Discussion Topic</h1>
        
        <%= form_with(model: @discussion_topic, local: true, class: "space-y-6") do |form| %>
          <% if @discussion_topic.errors.any? %>
            <div class="alert alert-error">
              <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
              <div>
                <h3 class="font-bold">Please fix the errors:</h3>
                <ul class="list-disc list-inside">
                  <% @discussion_topic.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          <% end %>

          <div class="form-control w-full">
            <%= form.label :title, class: "label" do %>
              <span class="label-text font-medium">Title</span>
            <% end %>
            <%= form.text_field :title, class: "input input-bordered w-full focus:outline-none focus:border-base-300" %>
          </div>

          <div class="form-control w-full">
            <%= form.label :description, class: "label" do %>
              <span class="label-text font-medium">Description</span>
            <% end %>
            <%= form.rich_text_area :description, class: "textarea textarea-bordered w-full focus:outline-none focus:border-base-300", style: "min-height: 200px;" %>
          </div>

          <div class="flex justify-end gap-3">
            <%= link_to "Cancel", discussion_topics_path, class: "btn btn-ghost" %>
            <%= form.submit "Create Topic", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
