<div class="container mx-auto max-w-4xl px-4 py-8" data-controller="topics">
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <div class="flex justify-between items-center mb-6">
        <h2 class="card-title text-2xl font-bold">Discussion Topics</h2>
        <div class="flex gap-2">
          <button class="btn btn-primary btn-sm" data-action="click->topics#showForm" title="New Topic">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd" />
            </svg>
            New Topic
          </button>
        </div>
      </div>

      <!-- New topic form -->
      <div id="new-topic-form" class="<%= 'hidden' unless @discussion_topic&.errors&.any? %> mb-6">
        <div class="card bg-base-100 border border-base-300 rounded-lg p-4">
          <%= form_with(model: @discussion_topic, local: true) do |form| %>
            <% if @discussion_topic.errors.any? %>
              <div class="alert alert-error mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                <div>
                  <h3 class="font-bold">Please fix the following errors:</h3>
                  <ul class="list-disc list-inside">
                    <% @discussion_topic.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            <% end %>
            
            <div class="form-control w-full mb-4">
              <%= form.label :title, class: "label" %>
              <%= form.text_field :title, class: "input input-bordered w-full", required: true %>
            </div>
            
            <div class="form-control w-full mb-4">
              <%= form.label :description, class: "label" %>
              <%= form.text_area :description, class: "textarea textarea-bordered w-full", rows: 4 %>
            </div>
            
            <div class="flex justify-end gap-2 mt-6">
              <button type="button" class="btn btn-ghost" data-action="click->topics#hideForm">Cancel</button>
              <%= form.submit "Create Topic", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Topics List -->
      <% if @discussion_topics.any? %>
        <div id="topic-list-items" class="rounded-lg border border-base-200 overflow-hidden">
          <% @discussion_topics.each do |topic| %>
            <div class="border-b border-base-200 last:border-b-0 p-4 hover:bg-base-100/50 transition-colors">
              <div class="flex justify-between items-start gap-4">
                <div class="flex-1">
                  <div class="flex justify-between items-center mb-1">
                    <h3 class="font-medium text-lg">
                      <%= link_to proper_title_case(topic.title), topic, class: "hover:text-primary" %>
                    </h3>
                    <span class="text-sm opacity-75"><%= time_ago_in_words(topic.latest_activity) %> ago</span>
                  </div>
                  
                  <p class="opacity-75 mb-3 line-clamp-2"><%= truncate(topic.description, length: 150) %></p>
                  
                  <div class="flex items-center justify-between">
                    <div class="flex items-center gap-4">
                      <span class="flex items-center gap-1 text-sm opacity-75">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
                        </svg>
                        <%= topic.comments_count %>
                      </span>
                      <span class="flex items-center gap-1 text-sm opacity-75">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                        </svg>
                        <%= topic.likes_count %>
                      </span>
                    </div>
                    <div class="flex items-center gap-3">
                      <span class="text-sm opacity-75">by <span class="font-medium"><%= topic.user.name %></span></span>
                      <% if topic.liked_by?(current_user) %>
                        <%= link_to discussion_topic_likes_path(topic), method: :delete, local: true, class: "text-error" do %>
                          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                          </svg>
                        <% end %>
                      <% else %>
                        <%= link_to discussion_topic_likes_path(topic), method: :post, local: true, class: "text-base-content/50 hover:text-error" do %>
                          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                          </svg>
                        <% end %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center p-8 bg-base-200 rounded-lg">
          <div class="text-4xl mb-4">ðŸ’¬</div>
          <h3 class="text-xl font-medium mb-2">No discussions yet</h3>
          <p class="text-base-content/70 mb-4">Start a conversation by creating the first discussion topic.</p>
          <button class="btn btn-primary" data-action="click->topics#showForm">Create a new topic</button>
        </div>
      <% end %>
    </div>
  </div>
</div>
