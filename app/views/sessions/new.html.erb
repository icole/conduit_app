<div class="login-container">
  <div class="card" style="max-width: 400px; margin: 2rem auto; padding: 2rem;">
    <h2 class="card-title text-center mb-3">Log in to Community Hub</h2>

    <% if flash[:alert] %>
      <div class="alert alert-danger mb-3">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <%#= form_with url: login_path, method: :post, class: "mb-4" do |f| %>
    <!--      <div class="form-group mb-3">-->
    <%#= f.label :email, class: "form-label" %>
    <%#= f.email_field :email, class: "form-input", required: true, autofocus: true %>
    <!--      </div>-->

    <!--      <div class="form-group mb-4">-->
    <%#= f.label :password, class: "form-label" %>
    <%#= f.password_field :password, class: "form-input", required: true %>
    <!--      </div>-->

    <!--      <div class="form-group">-->
    <%#= f.submit "Log in", class: "btn btn-primary w-100" %>
    <!--      </div>-->
    <%# end %>

    <!--    <div class="divider">-->
    <!--      <span>OR</span>-->
    <!--    </div>-->

    <%= button_to "/auth/google_oauth2", method: :post, class: "btn btn-outline w-100 google-btn", data: { turbo: false } do %>
      <img src="https://www.google.com/favicon.ico" alt="Google" width="20" height="20" style="margin-right: 8px;">
      Sign in with Google
    <% end %>
  </div>
</div>

<style>
    .divider {
        display: flex;
        align-items: center;
        text-align: center;
        margin: 1.5rem 0;
    }

    .divider::before,
    .divider::after {
        content: '';
        flex: 1;
        border-bottom: 1px solid #e5e7eb;
    }

    .divider span {
        padding: 0 1rem;
        color: #6b7280;
        font-size: 0.875rem;
    }

    .w-100 {
        width: 100%;
    }
</style>
