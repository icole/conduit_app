<%= turbo_stream.replace dom_id(@likeable, :like_section) do %>
  <% case @likeable %>
  <% when Post %>
    <%= render "shared/like_button", likeable: @likeable, style: :post %>
  <% when DiscussionTopic %>
    <%= render "discussion_topics/like_section", topic: @likeable %>
  <% when Comment %>
    <%= render "shared/like_button", likeable: @likeable, style: :comment %>
  <% when Chore %>
    <%= render "shared/like_button", likeable: @likeable, style: :topic %>
  <% else %>
    <%= render "shared/like_button", likeable: @likeable, style: :default %>
  <% end %>
<% end %>