<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Household Management</h1>
    <%= link_to "New Household", new_household_path, class: "btn btn-primary" %>
  </div>

  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <% if @households.any? %>
        <div class="overflow-x-auto">
          <table class="table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Members</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @households.each do |household| %>
                <tr class="hover">
                  <td class="font-medium"><%= household.name %></td>
                  <td>
                    <% if household.users.any? %>
                      <%= household.users.map(&:name).join(", ") %>
                    <% else %>
                      <span class="text-base-content/50">No members</span>
                    <% end %>
                  </td>
                  <td>
                    <div class="flex gap-2">
                      <%= link_to "Edit", edit_household_path(household), class: "btn btn-ghost btn-sm" %>
                      <%= button_to "Delete", household_path(household), method: :delete,
                          data: { turbo_confirm: "Are you sure you want to delete this household? Users will be unassigned but not deleted." },
                          class: "btn btn-ghost btn-sm text-error" %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-8">
          <p class="text-base-content/70 mb-4">No households have been created yet.</p>
          <%= link_to "Create Your First Household", new_household_path, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
