<div class="container mx-auto max-w-7xl px-4 py-8">
  <% if flash[:open_event_modal].present? %>
    <div data-controller="calendar-modal" data-calendar-modal-event-id-value="<%= flash[:open_event_modal] %>"></div>
  <% end %>
  <div class="grid grid-cols-1 xl:grid-cols-4 gap-6">
    <!-- Calendar View -->
    <div class="xl:col-span-3">
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <%= month_calendar(events: @calendar_events, attribute: :start_time, start_date: @date, params: @calendar_params) do |date, events| %>
            <div class="h-32 p-2 border-r border-b border-base-300 relative bg-base-50">
              <!-- Date header -->
              <div class="flex justify-between items-center mb-1">
                <div class="font-semibold text-sm <%= Date.current == date ? 'text-primary' : '' %>">
                  <%= date.day %>
                </div>
              </div>

              <!-- Events for this date -->
              <div class="space-y-0.5 absolute inset-x-2 top-8 bottom-2 overflow-hidden">
                <% events.each_with_index do |event, index| %>
                  <% event_id = "event_#{event.google_event_id&.gsub(/[^a-zA-Z0-9]/, '_') || "#{date.strftime('%Y%m%d')}_#{index}"}" %>
                  <button onclick="document.getElementById('<%= event_id %>_modal').showModal()"
                          class="<%= event.respond_to?(:all_day) && event.all_day ? 'bg-info/20 hover:bg-info/30 border-info' : 'bg-success/20 hover:bg-success/30 border-success' %> rounded-sm px-1 py-0.5 text-xs border-l-2 transition-colors block w-full text-left cursor-pointer">
                    <div class="font-medium overflow-hidden">
                      <div class="flex items-center gap-0.5 w-full">
                        <% if event.respond_to?(:all_day) && event.all_day %>
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-2.5 w-2.5 text-info flex-shrink-0" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12 2C13.1 2 14 2.9 14 4C14 5.1 13.1 6 12 6C10.9 6 10 5.1 10 4C10 2.9 10.9 2 12 2ZM21 9V7L15 1H5C3.89 1 3 1.89 3 3V21C3 22.11 3.89 23 5 23H11V21H5V3H13V9H21ZM14 12H22V14H14V12ZM14 16H22V18H14V16ZM14 20H22V22H14V20Z"/>
                          </svg>
                        <% else %>
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-2.5 w-2.5 text-success flex-shrink-0" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                          </svg>
                        <% end %>
                        <span class="truncate flex-1 text-xs font-medium"><%= event.title %></span>
                      </div>
                      <% if event.location.present? %>
                        <div class="text-xs text-base-content/60 truncate leading-tight">üìç <%= event.location %></div>
                      <% end %>
                    </div>
                  </button>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- New Event Button -->
      <div class="mt-6">
        <%= link_to new_calendar_event_path, class: "btn btn-primary" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd"/>
          </svg>
          New Event
        <% end %>
      </div>
      
      <!-- Upcoming Events -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h3 class="card-title text-lg">Upcoming Events</h3>
          <div class="space-y-3">
            <% upcoming_events = @calendar_events.select { |event| event.start_time >= Time.current }.first(5) %>
            <% if upcoming_events.any? %>
              <% upcoming_events.each do |event| %>
                <div class="border-l-2 <%= event.respond_to?(:all_day) && event.all_day ? 'border-info' : 'border-success' %> pl-3">
                  <div class="block hover:bg-base-200 p-2 rounded transition-colors">
                    <div class="font-medium text-sm flex items-center gap-1">
                      <% if event.respond_to?(:all_day) && event.all_day %>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 text-info" viewBox="0 0 24 24" fill="currentColor">
                          <path d="M12 2C13.1 2 14 2.9 14 4C14 5.1 13.1 6 12 6C10.9 6 10 5.1 10 4C10 2.9 10.9 2 12 2ZM21 9V7L15 1H5C3.89 1 3 1.89 3 3V21C3 22.11 3.89 23 5 23H11V21H5V3H13V9H21ZM14 12H22V14H14V12ZM14 16H22V18H14V16ZM14 20H22V22H14V20Z"/>
                        </svg>
                      <% else %>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 text-success" viewBox="0 0 24 24" fill="currentColor">
                          <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                        </svg>
                      <% end %>
                      <%= event.title %>
                    </div>
                    <div class="text-xs text-base-content/70">
                      <% if event.respond_to?(:all_day) && event.all_day %>
                        <%= event.start_time.strftime('%b %d, %Y') %> ‚Ä¢ All Day
                      <% else %>
                        <%= event.start_time.strftime('%b %d, %Y at %l:%M %p') %>
                      <% end %>
                    </div>
                    <% if event.location.present? %>
                      <div class="text-xs text-base-content/60">üìç <%= event.location %></div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            <% else %>
              <div class="text-center p-4 text-base-content/60">
                <div class="text-2xl mb-2">üìÖ</div>
                <p class="text-sm">No upcoming events</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Event Detail Modals -->
    <% events_with_dates = [] %>
    <% @calendar_events.each do |event| %>
      <% events_with_dates << { event: event, date: event.start_time.to_date } %>
    <% end %>

    <% events_with_dates.each_with_index do |event_data, global_index| %>
      <% event = event_data[:event] %>
      <% date = event_data[:date] %>
      <% # Find the index of this event on its specific date %>
      <% date_events = @calendar_events.select { |e| e.start_time.to_date == date } %>
      <% date_index = date_events.index(event) %>
      <% event_id = "event_#{event.google_event_id&.gsub(/[^a-zA-Z0-9]/, '_') || "#{date.strftime('%Y%m%d')}_#{date_index}"}" %>
      <dialog id="<%= event_id %>_modal" class="modal">
        <div class="modal-box">
          <form method="dialog">
            <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">‚úï</button>
          </form>

          <div class="flex items-center gap-3 mb-4">
            <% if event.respond_to?(:all_day) && event.all_day %>
              <div class="w-4 h-4 bg-info rounded-full flex-shrink-0"></div>
              <h3 class="font-bold text-lg text-info">All Day</h3>
            <% else %>
              <div class="w-4 h-4 bg-success rounded-full flex-shrink-0"></div>
              <h3 class="font-bold text-lg text-success">
                <%= event.start_time.strftime('%l:%M %p').strip %>
                <% if event.end_time && event.start_time.to_date == event.end_time.to_date %>
                  - <%= event.end_time.strftime('%l:%M %p').strip %>
                <% end %>
              </h3>
            <% end %>
          </div>

          <div class="space-y-4">
            <div>
              <h4 class="font-semibold text-xl mb-2"><%= event.title %></h4>
            </div>

            <div class="flex items-center gap-2 text-base-content/70">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
              </svg>
              <span><%= event.time_range %></span>
            </div>

            <% if event.location.present? %>
              <div class="flex items-start gap-2 text-base-content/70">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mt-0.5 flex-shrink-0" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                </svg>
                <span class="flex-1"><%= event.location %></span>
              </div>
            <% end %>

            <div class="divider"></div>

            <div class="flex items-center gap-2 text-sm text-base-content/60">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              <span>Google Calendar Event</span>
            </div>

            <div class="divider"></div>

            <div class="flex justify-end gap-3">
              <% if event.respond_to?(:google_event) && event.google_event %>
                <!-- Google Calendar event - edit with auto-import -->
                <%= link_to edit_google_calendar_events_path(google_event_id: event.google_event_id), 
                           class: "btn btn-secondary btn-sm" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"/>
                  </svg>
                  Edit
                <% end %>
                <%= link_to delete_google_calendar_events_path(google_event_id: event.google_event_id), 
                           method: :delete,
                           class: "btn btn-error btn-sm",
                           data: {
                             turbo_method: :delete,
                             confirm: "Are you sure you want to delete this Google Calendar event?"
                           } do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"/>
                  </svg>
                  Delete
                <% end %>
              <% else %>
                <!-- Local CalendarEvent - can edit and delete normally -->
                <%= link_to edit_calendar_event_path(event), class: "btn btn-secondary btn-sm" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"/>
                  </svg>
                  Edit
                <% end %>
                <%= link_to calendar_event_path(event), method: :delete,
                            class: "btn btn-error btn-sm",
                            data: {
                              turbo_method: :delete,
                              turbo_confirm: "Are you sure you want to delete this event? This will also remove it from Google Calendar."
                            } do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"/>
                  </svg>
                  Delete
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
        <form method="dialog" class="modal-backdrop">
          <button>close</button>
        </form>
      </dialog>
    <% end %>

<%= stylesheet_link_tag "calendar", "data-turbo-track": "reload" %>

