<% content_for :title, "Community Chat" %>

<div class="min-h-screen flex items-center justify-center p-4">
  <div class="text-center max-w-md">
    <div class="mb-8">
      <div class="inline-flex items-center justify-center w-20 h-20 bg-blue-600 rounded-full mb-4">
        <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
        </svg>
      </div>
      <h1 class="text-2xl font-bold text-gray-900 mb-2">HOA Community Chat</h1>
      <p class="text-gray-600 mb-8">Loading chat...</p>
    </div>

    <!-- This page triggers the native iOS chat view -->
    <div id="chat-status" class="text-sm text-gray-500">
      Initializing Stream Chat...
    </div>
  </div>
</div>

<script>
  // Signal to native app that chat should be opened
  document.addEventListener('DOMContentLoaded', () => {
    // Post message to trigger native chat
    if (window.webkit && window.webkit.messageHandlers && window.webkit.messageHandlers.streamChat) {
      window.webkit.messageHandlers.streamChat.postMessage({
        action: 'openChat',
        userId: '<%= current_user.id.to_s %>'
      });
    } else {
      document.getElementById('chat-status').textContent = 'Native chat not available in this environment';
    }
  });
</script>