<%= form_with(model: mailing_list, local: true) do |form| %>
  <% if mailing_list.errors.any? %>
    <div class="alert alert-error mb-4">
      <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
      </svg>
      <div>
        <h3 class="font-bold">Please fix the following errors:</h3>
        <ul class="list-disc list-inside">
          <% mailing_list.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-control w-full mb-4">
    <%= form.label :name, class: "label" %>
    <span class="label-text-alt text-gray-500">Only lowercase letters, numbers, hyphens, and underscores allowed</span>
    <%= form.text_field :name, class: "input input-bordered w-full", required: true,
                        placeholder: "e.g., community, team, announcements" %>
    <% if mailing_list.name.present? %>
      <div class="label">
        <span class="label-text-alt text-gray-600 font-mono">
          Email: <%= mailing_list.email_address %>
        </span>
      </div>
    <% end %>
  </div>

  <div class="form-control w-full mb-4">
    <%= form.label :description, class: "label" %>
    <%= form.text_area :description, class: "textarea textarea-bordered w-full", rows: 4, required: true,
                       placeholder: "Describe the purpose of this mailing list..." %>
  </div>

  <div class="form-control w-full mb-4">
    <label class="label cursor-pointer justify-start">
      <%= form.check_box :active, class: "checkbox mr-3" %>
      <span class="label-text">Active (list can receive emails)</span>
    </label>
  </div>

  <div class="flex justify-end gap-2 mt-6">
    <%= link_to "Cancel", mailing_list.persisted? ? mailing_list : mailing_lists_path, class: "btn btn-ghost" %>
    <%= form.submit mailing_list.persisted? ? "Update Mailing List" : "Create Mailing List", class: "btn btn-primary" %>
  </div>
<% end %>