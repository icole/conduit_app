<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Mailing Lists</h1>
    <%= link_to "New Mailing List", new_mailing_list_path, class: "btn btn-primary" %>
  </div>

  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <% if @mailing_lists.any? %>
        <div class="overflow-x-auto">
          <table class="table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Email Address</th>
                <th>Description</th>
                <th>Members</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @mailing_lists.each do |mailing_list| %>
                <tr class="hover">
                  <td>
                    <div class="font-medium"><%= mailing_list.name %></div>
                  </td>
                  <td>
                    <div class="font-mono text-sm"><%= mailing_list.email_address %></div>
                  </td>
                  <td>
                    <div><%= truncate(mailing_list.description, length: 100) %></div>
                  </td>
                  <td>
                    <span class="badge badge-primary">
                      <%= mailing_list.member_count %> members
                    </span>
                  </td>
                  <td>
                    <div class="flex gap-2">
                      <%= link_to "View", mailing_list_path(mailing_list), class: "btn btn-ghost btn-sm" %>
                      <%= link_to "Edit", edit_mailing_list_path(mailing_list), class: "btn btn-ghost btn-sm" %>
                      <%= button_to "Delete", mailing_list_path(mailing_list), method: :delete,
                                    data: { confirm: "Are you sure you want to delete #{mailing_list.name}?" },
                                    class: "btn btn-ghost btn-sm text-error" %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-8">
          <div class="text-4xl mb-4">ðŸ“§</div>
          <p class="text-base-content/60 text-lg">No mailing lists found.</p>
          <p class="text-base-content/50 mt-2">
            <%= link_to "Create your first mailing list", new_mailing_list_path, class: "link link-primary" %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>
