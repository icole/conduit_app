<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-2xl font-bold"><%= @mailing_list.name %></h1>
      <p class="text-base-content/70 font-mono text-lg"><%= @mailing_list.email_address %></p>
    </div>
    <div class="flex gap-2">
      <%= link_to "← Back to Lists", mailing_lists_path, class: "btn btn-outline" %>
      <%= link_to "Send Email", broadcast_mailing_list_path(@mailing_list), class: "btn btn-primary" %>
      <%= link_to "Edit", edit_mailing_list_path(@mailing_list), class: "btn btn-secondary" %>
    </div>
  </div>

  <div class="card bg-base-100 shadow-xl mb-6">
    <div class="card-body">
      <h2 class="card-title">Description</h2>
      <p><%= @mailing_list.description %></p>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Current Members -->
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title">Members (<%= @members.count %>)</h2>
        <% if @members.any? %>
          <div class="space-y-2">
            <% @members.each do |member| %>
              <div class="flex justify-between items-center p-3 bg-base-200 rounded-lg">
                <div class="flex items-center gap-3">
                  <% if member.avatar_url.present? %>
                    <div class="avatar">
                      <div class="w-8 h-8 rounded-full">
                        <img src="<%= member.avatar_url %>" alt="<%= member.name %>">
                      </div>
                    </div>
                  <% else %>
                    <div class="avatar placeholder">
                      <div class="bg-neutral text-neutral-content w-8 h-8 rounded-full">
                        <span class="text-xs"><%= member.name.first(2).upcase %></span>
                      </div>
                    </div>
                  <% end %>
                  <div>
                    <div class="font-medium"><%= member.name %></div>
                    <div class="text-sm text-base-content/70"><%= member.email %></div>
                  </div>
                </div>
                <%= button_to "Remove", remove_member_mailing_list_path(@mailing_list, user_id: member.id),
                              method: :delete,
                              data: { confirm: "Remove #{member.name} from #{@mailing_list.name}?" },
                              class: "btn btn-ghost btn-sm text-error" %>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <div class="text-4xl mb-2">👥</div>
            <p class="text-base-content/60">No members yet.</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Add Members -->
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title">Add Members</h2>
        <% if @non_members.any? %>
          <div class="space-y-2">
            <% @non_members.each do |user| %>
              <div class="flex justify-between items-center p-3 bg-base-200 rounded-lg">
                <div class="flex items-center gap-3">
                  <% if user.avatar_url.present? %>
                    <div class="avatar">
                      <div class="w-8 h-8 rounded-full">
                        <img src="<%= user.avatar_url %>" alt="<%= user.name %>">
                      </div>
                    </div>
                  <% else %>
                    <div class="avatar placeholder">
                      <div class="bg-neutral text-neutral-content w-8 h-8 rounded-full">
                        <span class="text-xs"><%= user.name.first(2).upcase %></span>
                      </div>
                    </div>
                  <% end %>
                  <div>
                    <div class="font-medium"><%= user.name %></div>
                    <div class="text-sm text-base-content/70"><%= user.email %></div>
                  </div>
                </div>
                <%= button_to "Add", add_member_mailing_list_path(@mailing_list, user_id: user.id),
                              method: :post,
                              class: "btn btn-ghost btn-sm text-primary" %>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <div class="text-4xl mb-2">✅</div>
            <p class="text-base-content/60">All users are already members of this mailing list.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
