<div class="card bg-base-100 shadow-xl">
  <div class="card-body">
    <%= form_with(model: calendar_event, data: { turbo: false }) do |form| %>
      <% if calendar_event.errors.any? %>
        <div class="alert alert-error mb-6">
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <div>
            <h3 class="font-bold">Please fix the following errors:</h3>
            <ul class="list-disc list-inside mt-2">
              <% calendar_event.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>

      <div class="form-control w-full mb-4">
        <%= form.label :title, "Event Title *", class: "label label-text font-medium" %>
        <%= form.text_field :title, class: "input input-bordered w-full", required: true, placeholder: "Enter event title" %>
      </div>

      <div class="form-control w-full mb-4">
        <%= form.label :description, "Description", class: "label label-text font-medium" %>
        <%= form.text_area :description, class: "textarea textarea-bordered w-full", rows: 3, placeholder: "Add event description..." %>
      </div>

      <div class="form-control w-full mb-4">
        <%= form.label :location, "Location", class: "label label-text font-medium" %>
        <%= form.text_field :location, class: "input input-bordered w-full", placeholder: "Event location" %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
        <div class="form-control w-full">
          <%= form.label :start_time, "Start Time *", class: "label label-text font-medium" %>
          <%= form.datetime_field :start_time, class: "input input-bordered w-full", required: true %>
          <div class="label">
            <span class="label-text-alt text-base-content/60">Enter time in Pacific Time (PT)</span>
          </div>
        </div>

        <div class="form-control w-full">
          <%= form.label :end_time, "End Time *", class: "label label-text font-medium" %>
          <%= form.datetime_field :end_time, class: "input input-bordered w-full", required: true %>
          <div class="label">
            <span class="label-text-alt text-base-content/60">Enter time in Pacific Time (PT)</span>
          </div>
        </div>
      </div>

      <% if calendar_event.persisted? && calendar_event.synced_with_google? %>
        <div class="alert alert-info mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <span>This event is synced with Google Calendar</span>
        </div>
      <% end %>

      <div class="flex justify-end gap-3 mt-6">
        <%= link_to 'Cancel', calendar_index_path, class: "btn btn-ghost" %>
        <%= form.submit class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
