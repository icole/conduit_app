    <div class="alert bg-neutral text-neutral-content shadow-lg px-6 py-3 rounded-lg flex items-center gap-4">
      <span><%= flash[:notice_with_undo][:message] %></span>
      <%= button_to "Undo", flash[:notice_with_undo][:undo_path], method: :post, class: "btn btn-sm btn-primary", data: { turbo_method: :post } %>
      <button data-action="click->flash#dismiss" class="btn btn-sm btn-ghost" aria-label="Close">âœ•</button>
    </div>
  </div>
<% end %>
