<!-- Navigation -->
<div class="navbar bg-base-300 shadow-md text-primary-content px-6">
  <div class="navbar-start">
    <!-- Mobile hamburger menu -->
    <div class="dropdown lg:hidden">
      <div tabindex="0" role="button" class="btn btn-ghost btn-circle">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none"
             viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round"
                stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </div>
      <ul tabindex="0" class="menu dropdown-content z-[1] p-2 shadow bg-base-100 text-base-content rounded-box w-52 mt-4">
        <li><%= link_to "Dashboard", dashboard_index_path %></li>
        <li><%= link_to "Tasks", tasks_path %></li>
        <li><%= link_to "Discussions", discussion_topics_path %></li>
        <% if user_signed_in? && current_user.admin? %>
          <li>
            <details>
              <summary>Admin</summary>
              <ul class="p-2">
                <li><%= link_to "Mailing Lists", mailing_lists_path %></li>
                <li><%= link_to "Invitations", invitations_path %></li>
                <li><%= link_to "Users", users_path %></li>
              </ul>
            </details>
          </li>
        <% end %>
      </ul>
    </div>

    <!-- Logo -->
    <%= link_to root_path, class: "flex items-center gap-2 mr-2" do %>
      <%= image_tag("crow-woods-logo.png", alt: "Crow Woods", class: "h-10 w-auto") %>
    <% end %>

    <div class="hidden lg:flex gap-2">
      <ul class="menu menu-horizontal px-1 gap-2">
        <li><%= link_to "Dashboard", dashboard_index_path, class: "btn btn-ghost btn-md #{'btn-active' if current_page?(dashboard_index_path) || current_page?(root_path)}" %></li>
        <li><%= link_to "Tasks", tasks_path, class: "btn btn-ghost btn-md #{'btn-active' if current_page?(tasks_path)}" %></li>
        <li><%= link_to "Discussions", discussion_topics_path, class: "btn btn-ghost btn-md #{'btn-active' if controller_name == 'discussion_topics'}" %></li>
        <% if user_signed_in? && current_user.admin? %>
          <li class="dropdown dropdown-hover">
            <div tabindex="0" role="button" class="btn btn-ghost btn-md #{'btn-active' if controller_name.in?(['invitations', 'users', 'mailing_lists'])}">
              Admin
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </div>
            <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-100 text-base-content rounded-box w-52">
              <li><%= link_to "Mailing Lists", mailing_lists_path, class: "#{'active' if controller_name == 'mailing_lists'}" %></li>
              <li><%= link_to "Invitations", invitations_path, class: "#{'active' if current_page?(invitations_path)}" %></li>
              <li><%= link_to "Users", users_path, class: "#{'active' if controller_name == 'users'}" %></li>
            </ul>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="navbar-end gap-4">
    <% if user_signed_in? %>
      <div class="dropdown dropdown-end">
        <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar placeholder p-0 overflow-hidden">
          <div class="flex-shrink-0 h-10 w-10">
            <img class="h-10 w-10 rounded-full" src="<%= current_user.avatar_url %>" alt="<%= current_user.name %>">
          </div>
        </div>
        <ul tabindex="0" class="menu dropdown-content z-[1] p-2 shadow bg-base-100 text-base-content rounded-box w-52 mt-4">
          <%# <li><a href="#" class="py-2">Profile</a></li>
          <li><a href="#" class="py-2">Settings</a></li> %>
          <li><%= link_to "Logout", logout_path, data: { turbo_method: :delete }, class: "py-2" %></li>
        </ul>
      </div>
    <% end %>
  </div>
</div>
