<!-- Navigation -->
<div class="navbar bg-base-300 shadow-md text-primary-content px-4 lg:px-6">
  <div class="navbar-start">
    <!-- Mobile hamburger menu -->
    <div class="dropdown lg:hidden">
      <div tabindex="0" role="button" class="btn btn-ghost btn-circle">
        <%= heroicon "bars-3", variant: :outline, options: { class: "h-5 w-5" } %>
      </div>
      <ul tabindex="0" class="menu dropdown-content z-[1] p-2 shadow bg-base-100 text-base-content rounded-box w-52 mt-4">
        <li><%= link_to "Dashboard", dashboard_index_path %></li>
        <li><%= link_to "Tasks", tasks_path %></li>
        <li><%= link_to "Calendar", calendar_index_path %></li>
        <li><%= link_to "Meals", meals_path %></li>
        <li class="divider"></li>
        <li><%= link_to account_path do %>
          Account Settings
          <% unless google_account? %>
            <span class="badge badge-warning badge-xs">Limited</span>
          <% end %>
        <% end %></li>
        <% if user_signed_in? && current_user.admin? %>
          <li>
            <details>
              <summary>Admin</summary>
              <ul class="p-2">
                <li><%= link_to "Invitations", invitations_path %></li>
                <li><%= link_to "Users", users_path %></li>
                <li><%= link_to "Households", households_path %></li>
                <li><%= link_to "Monthly Dues", dues_path %></li>
              </ul>
            </details>
          </li>
        <% end %>
      </ul>
    </div>

    <!-- Logo -->
    <%= link_to root_path, class: "flex items-center gap-2 mr-4" do %>
      <%= image_tag("crow-woods-logo.png", alt: current_community&.name || "Conduit", class: "h-10 w-auto") %>
    <% end %>

    <!-- Desktop Navigation -->
    <div class="hidden lg:flex items-center gap-1 flex-1">
      <ul class="menu menu-horizontal px-1 gap-1">
        <li><%= link_to "Dashboard", dashboard_index_path, class: "btn btn-ghost btn-sm #{'btn-active' if current_page?(dashboard_index_path) || current_page?(root_path)}" %></li>
        <li><%= link_to "Tasks", tasks_path, class: "btn btn-ghost btn-sm #{'btn-active' if controller_name == 'tasks'}" %></li>
        <li><%= link_to "Calendar", calendar_index_path, class: "btn btn-ghost btn-sm #{'btn-active' if controller_name.in?(['calendar', 'calendar_events'])}" %></li>
        <li><%= link_to "Meals", meals_path, class: "btn btn-ghost btn-sm #{'btn-active' if controller_name.in?(['meals', 'meal_schedules'])}" %></li>

        <!-- Admin Dropdown (if admin) -->
        <% if user_signed_in? && current_user.admin? %>
          <li class="dropdown dropdown-hover">
            <div tabindex="0" role="button" class="btn btn-ghost btn-sm #{'btn-active' if controller_name.in?(['invitations', 'users', 'households', 'dues'])}">
              Admin
              <%= heroicon "chevron-down", variant: :outline, options: { class: "h-3 w-3 ml-1" } %>
            </div>
            <ul tabindex="0" class="dropdown-content z-50 menu p-2 shadow-lg bg-base-100 text-base-content rounded-box w-48">
              <li><%= link_to "Invitations", invitations_path, class: "#{'active' if current_page?(invitations_path)}" %></li>
              <li><%= link_to "Users", users_path, class: "#{'active' if controller_name == 'users'}" %></li>
              <li><%= link_to "Households", households_path, class: "#{'active' if controller_name == 'households'}" %></li>
              <li><%= link_to "Monthly Dues", dues_path, class: "#{'active' if controller_name == 'dues'}" %></li>
            </ul>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <!-- User Menu -->
  <div class="navbar-end pr-2">
    <% if user_signed_in? %>
      <div class="dropdown dropdown-end dropdown-hover">
        <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar placeholder p-0 overflow-hidden">
          <div class="flex-shrink-0 h-10 w-10">
            <img class="h-10 w-10 rounded-full" src="<%= current_user.avatar_url %>" alt="<%= current_user.name %>">
          </div>
        </div>
        <ul tabindex="0" class="menu dropdown-content z-50 p-2 shadow-lg bg-base-100 text-base-content rounded-box w-52 mt-2">
          <li><%= link_to account_path, class: "py-2" do %>
            Account Settings
            <% unless google_account? %>
              <span class="badge badge-warning badge-xs">Limited</span>
            <% end %>
          <% end %></li>
          <li><%= button_to "Logout", logout_path, method: :delete, class: "py-2 w-full text-left", form_class: "w-full" %></li>
        </ul>
      </div>
    <% end %>
  </div>
</div>
