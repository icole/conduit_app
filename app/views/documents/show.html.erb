<% content_for :title, @document.title %>
<%= javascript_include_tag "document_editor", type: "module", "data-turbo-track": "reload" %>

<div class="max-w-5xl mx-auto sm:px-4 py-3 sm:py-6">
  <%# Header with back button, title, and edit button %>
  <div class="flex items-center justify-between gap-2 mb-4 sm:mb-6">
    <div class="flex items-center gap-2 sm:gap-3 min-w-0">
      <%= link_to documents_path(folder_id: @document.document_folder_id), class: "btn btn-ghost btn-sm btn-square shrink-0" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
      <% end %>
      <div class="min-w-0">
        <h1 class="text-lg sm:text-2xl font-bold truncate"><%= @document.title %></h1>
        <% if @document.description.present? %>
          <p class="text-xs sm:text-sm text-base-content/60 truncate"><%= @document.description %></p>
        <% end %>
      </div>
    </div>

    <div class="flex gap-1 sm:gap-2 shrink-0">
      <% if @document.safe_google_drive_url %>
        <%= link_to @document.safe_google_drive_url, target: "_blank", rel: "noopener noreferrer", class: "btn btn-sm btn-outline gap-1 sm:gap-2" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
          <span class="hidden sm:inline">Drive</span>
        <% end %>
      <% end %>
      <%# Show edit button for native documents (including imported ones) %>
      <% if @document.native? %>
        <%= link_to edit_document_path(@document), class: "btn btn-sm btn-primary gap-1 sm:gap-2" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
          </svg>
          Edit
        <% end %>
      <% end %>
    </div>
  </div>

  <%# Document content via Tiptap in read-only mode %>
  <% if @document.content.present? %>
    <div class="bg-white rounded-lg border border-base-200 shadow-sm overflow-hidden">
      <div class="p-3 sm:p-6">
        <div
          id="document-editor-react"
          data-document-id="<%= @document.id %>"
          data-initial-content="<%= Base64.strict_encode64(@document.content.to_s) %>"
          data-read-only="true"
          data-imported="<%= @document.google_drive_url.present? %>"
          class="min-h-[200px]"
        ></div>
      </div>
    </div>
  <% else %>
    <div class="text-center py-12 text-base-content/50">
      <p class="text-sm">This document is empty.</p>
      <% if @document.native? %>
        <p class="text-xs mt-1">
          <%= link_to "Start editing", edit_document_path(@document), class: "link link-primary" %>
        </p>
      <% end %>
    </div>
  <% end %>
</div>
