<% content_for :title, @document.title %>

<% if @document.native? %>
  <% content_for :full_bleed, true %>
  <%= javascript_include_tag "document_editor", type: "module", "data-turbo-track": "reload" %>
<% end %>

<% if @document.native? %>
  <%# Native document - full-width collaborative editor %>
  <div class="flex flex-col h-full min-h-0">
    <%# Compact header bar %>
    <div class="flex items-center justify-between px-4 py-2 border-b border-base-200 bg-base-100">
      <div class="flex items-center gap-3">
        <%= link_to documents_path(folder_id: @document.document_folder_id), class: "btn btn-ghost btn-sm btn-square" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
        <% end %>

        <%# Inline editable title %>
        <div data-controller="inline-edit" data-inline-edit-url-value="<%= document_path(@document) %>">
          <%# Display mode %>
          <div data-inline-edit-target="display" class="flex items-center gap-2">
            <div>
              <h1 class="text-lg font-semibold leading-tight" data-title><%= @document.title %></h1>
              <% if @document.description.present? %>
                <p class="text-xs text-base-content/60 leading-tight"><%= @document.description %></p>
              <% end %>
            </div>
            <button type="button" data-action="click->inline-edit#edit" class="btn btn-ghost btn-xs btn-square" title="Rename">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
              </svg>
            </button>
          </div>

          <%# Edit mode %>
          <div data-inline-edit-target="form" class="hidden">
            <form data-action="submit->inline-edit#save" class="flex items-center gap-2">
              <input
                type="text"
                data-inline-edit-target="input"
                data-action="keydown->inline-edit#keydown"
                value="<%= @document.title %>"
                class="input input-sm input-bordered w-64"
              />
              <button type="submit" class="btn btn-sm btn-primary">Save</button>
              <button type="button" data-action="click->inline-edit#cancel" class="btn btn-sm btn-ghost">Cancel</button>
            </form>
          </div>
        </div>
      </div>
      <div class="flex items-center gap-3">
        <%# Presence indicator will be rendered here by React %>
        <div id="presence-indicator-portal"></div>
      </div>
    </div>

    <%# Full-height editor container %>
    <div class="flex-1 overflow-hidden">
      <div
        id="document-editor-react"
        data-document-id="<%= @document.id %>"
        data-initial-content="<%= @document.content %>"
        data-read-only="false"
        data-save-url="<%= update_content_document_path(@document) %>"
        class="h-full"
      ></div>
    </div>
  </div>

<% end %>
