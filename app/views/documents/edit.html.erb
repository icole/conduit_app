<% content_for :title, @document.title %>

<% if @document.native? %>
  <% content_for :full_bleed, true %>
  <%= javascript_include_tag "document_editor", type: "module", "data-turbo-track": "reload" %>
<% end %>

<% if @document.native? %>
  <%# Native document - full-width collaborative editor %>
  <div class="flex flex-col h-full">
    <%# Compact header bar %>
    <div class="flex items-center justify-between px-4 py-2 border-b border-base-200 bg-base-100">
      <div class="flex items-center gap-3">
        <%= link_to documents_path, class: "btn btn-ghost btn-sm btn-square" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
        <% end %>
        <div>
          <h1 class="text-lg font-semibold leading-tight"><%= @document.title %></h1>
          <% if @document.description.present? %>
            <p class="text-xs text-base-content/60 leading-tight"><%= @document.description %></p>
          <% end %>
        </div>
      </div>
      <div class="flex items-center gap-3">
        <%# Presence indicator will be rendered here by React %>
        <div id="presence-indicator-portal"></div>

        <div class="dropdown dropdown-end">
          <label tabindex="0" class="btn btn-ghost btn-sm btn-square">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
            </svg>
          </label>
          <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-52">
            <li>
              <%= link_to edit_document_path(@document, edit_metadata: true) do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
                Rename
              <% end %>
            </li>
            <li>
              <%= button_to document_path(@document), method: :delete,
                  data: { turbo_confirm: "Are you sure you want to delete '#{@document.title}'?" },
                  class: "text-error" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
                Delete
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <%# Full-height editor container %>
    <div class="flex-1 overflow-hidden">
      <div
        id="document-editor-react"
        data-document-id="<%= @document.id %>"
        data-initial-content="<%= @document.content %>"
        data-read-only="false"
        data-save-url="<%= update_content_document_path(@document) %>"
        class="h-full"
      ></div>
    </div>
  </div>

<% elsif params[:edit_metadata] %>
  <%# Editing metadata for native document %>
  <div class="max-w-xl mx-auto px-4 py-6">
    <div class="flex items-center gap-3 mb-6">
      <%= link_to edit_document_path(@document), class: "btn btn-ghost btn-sm" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
      <% end %>
      <h1 class="text-2xl font-bold">Rename Document</h1>
    </div>

    <%= form_with(model: @document, class: "space-y-4") do |form| %>
      <div class="form-control">
        <%= form.label :title, class: "label" %>
        <%= form.text_field :title, class: "input input-bordered w-full", autofocus: true %>
      </div>

      <div class="form-control">
        <%= form.label :description, class: "label" %>
        <%= form.text_area :description, rows: 3, class: "textarea textarea-bordered w-full" %>
      </div>

      <div class="flex gap-2">
        <%= form.submit "Save", class: "btn btn-primary" %>
        <%= link_to "Cancel", edit_document_path(@document), class: "btn btn-ghost" %>
      </div>
    <% end %>
  </div>

<% else %>
  <%# Google Drive document - show form %>
  <div class="max-w-xl mx-auto px-4 py-6">
    <div class="flex items-center gap-3 mb-6">
      <%= link_to documents_path, class: "btn btn-ghost btn-sm" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
      <% end %>
      <h1 class="text-2xl font-bold">Edit Document</h1>
    </div>

    <%= render "form", document: @document %>
  </div>
<% end %>
