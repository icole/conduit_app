<% content_for :title, @document.title %>
<%= javascript_include_tag "document_editor", type: "module", "data-turbo-track": "reload" if @document.native? %>

<% if @document.native? %>
<div class="max-w-5xl mx-auto sm:px-4 py-3 sm:py-6">
  <%# Header with back button, title, and status %>
  <div class="flex items-center justify-between gap-2 mb-4 sm:mb-6">
    <div class="flex items-center gap-2 sm:gap-3 min-w-0">
      <%= link_to documents_path(folder_id: @document.document_folder_id), class: "btn btn-ghost btn-sm btn-square shrink-0" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
      <% end %>

      <%# Inline editable title %>
      <div data-controller="inline-edit" data-inline-edit-url-value="<%= document_path(@document) %>" class="min-w-0">
        <%# Display mode %>
        <div data-inline-edit-target="display" class="flex items-center gap-2">
          <div class="min-w-0">
            <h1 class="text-lg sm:text-2xl font-bold truncate" data-title><%= @document.title %></h1>
            <% if @document.description.present? %>
              <p class="text-xs sm:text-sm text-base-content/60 truncate"><%= @document.description %></p>
            <% end %>
          </div>
          <button type="button" data-action="click->inline-edit#edit" class="btn btn-ghost btn-xs btn-square shrink-0" title="Rename">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
            </svg>
          </button>
        </div>

        <%# Edit mode %>
        <div data-inline-edit-target="form" class="hidden">
          <form data-action="submit->inline-edit#save" class="flex items-center gap-2">
            <input
              type="text"
              data-inline-edit-target="input"
              data-action="keydown->inline-edit#keydown"
              value="<%= @document.title %>"
              class="input input-sm input-bordered w-64"
            />
            <button type="submit" class="btn btn-sm btn-primary">Save</button>
            <button type="button" data-action="click->inline-edit#cancel" class="btn btn-sm btn-ghost">Cancel</button>
          </form>
        </div>
      </div>
    </div>

    <div class="flex items-center gap-2 sm:gap-3 shrink-0">
      <%# Presence/save status rendered here by React %>
      <div id="presence-indicator-portal"></div>
      <% if @document.safe_google_drive_url %>
        <%= button_to reimport_document_path(@document), method: :post, class: "btn btn-sm btn-outline gap-1 sm:gap-2", title: "Re-sync content and images from Google Drive", form: { data: { turbo_confirm: "Re-sync this document from Google Drive? This will replace the current content with the latest from Drive." } } do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
          </svg>
          <span class="hidden sm:inline">Re-sync</span>
        <% end %>
        <%= link_to @document.safe_google_drive_url, target: "_blank", rel: "noopener noreferrer", class: "btn btn-sm btn-outline gap-1 sm:gap-2" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
          <span class="hidden sm:inline">Drive</span>
        <% end %>
      <% end %>
    </div>
  </div>

  <%# Editor in document-style container %>
  <div class="bg-white rounded-lg border border-base-200 shadow-sm overflow-hidden flex flex-col min-h-[60vh]">
    <div
      id="document-editor-react"
      data-document-id="<%= @document.id %>"
      data-initial-content="<%= Base64.strict_encode64(@document.content.to_s) %>"
      data-read-only="false"
      data-imported="<%= @document.google_drive_url.present? %>"
      data-save-url="<%= update_content_document_path(@document) %>"
      class="flex-1 flex flex-col"
    ></div>
  </div>
</div>
<% end %>
