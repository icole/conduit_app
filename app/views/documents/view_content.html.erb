<% content_for :title, @document.title %>

<div class="max-w-5xl mx-auto px-4 py-6">
  <%# Header with back button and document info %>
  <div class="flex items-center justify-between mb-6">
    <div class="flex items-center gap-3">
      <%= link_to documents_path(folder_id: @document.document_folder_id), class: "btn btn-ghost btn-sm btn-square" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
      <% end %>
      <div>
        <h1 class="text-2xl font-bold"><%= @document.title %></h1>
        <% if @document.description.present? %>
          <p class="text-sm text-base-content/60"><%= @document.description %></p>
        <% end %>
      </div>
    </div>

    <div class="flex items-center gap-2">
      <% if @document.safe_google_drive_url %>
        <%= link_to @document.safe_google_drive_url, target: "_blank", rel: "noopener noreferrer", class: "btn btn-sm btn-outline gap-2" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
          Open in Google Drive
        <% end %>
      <% end %>
    </div>
  </div>

  <%# Document content %>
  <% if @document_html_content.present? %>
    <div class="bg-white rounded-lg border border-base-200 shadow-sm">
      <div class="p-6 prose prose-sm sm:prose max-w-none google-drive-content">
        <%= sanitize(clean_google_drive_html(@document_html_content), tags: %w[p br div span a h1 h2 h3 h4 h5 h6 ul ol li table thead tbody tr th td strong em b i u s strike sub sup blockquote pre code img hr], attributes: %w[href src alt title target rel style]) %>
      </div>
    </div>
  <% else %>
    <div class="alert alert-warning">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
      </svg>
      <span>Unable to load document content. The document may not be accessible or the format is not supported.</span>
    </div>

    <% if @document.safe_google_drive_url %>
      <div class="mt-4 text-center">
        <%= link_to @document.safe_google_drive_url, target: "_blank", rel: "noopener noreferrer", class: "btn btn-primary" do %>
          Try Opening in Google Drive
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>

<style>
  /* Clean up Google Docs exported HTML */
  .google-drive-content {
    line-height: 1.6;
  }
  .google-drive-content img {
    max-width: 100%;
    height: auto;
  }
  .google-drive-content table {
    border-collapse: collapse;
    width: 100%;
    margin: 1rem 0;
  }
  .google-drive-content th,
  .google-drive-content td {
    border: 1px solid #e5e7eb;
    padding: 0.5rem;
    text-align: left;
  }
  .google-drive-content th {
    background-color: #f9fafb;
    font-weight: 600;
  }
</style>
