# Staging Environment Configuration
# Copy this to .env.staging and fill in your values

# Docker Registry
DOCKER_USERNAME=your_dockerhub_username
KAMAL_REGISTRY_PASSWORD=your_dockerhub_token

# Staging Server (GCP Compute Engine)
STAGING_SERVER_IP=x.x.x.x
STAGING_SSH_USER=icole

# Rails
RAILS_MASTER_KEY=your_rails_master_key

# Database (use different password than production!)
CONDUIT_APP_DATABASE_PASSWORD=staging_db_password_here
POSTGRES_PASSWORD=staging_db_password_here

# Google OAuth (can use same as production for testing)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_IOS_CLIENT_ID=your_ios_client_id
GOOGLE_ANDROID_CLIENT_ID=your_android_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Google Calendar & Drive (optional - can use same as production or different)
CALENDAR_CONFIG_CONTENT=base64_encoded_service_account_json
GOOGLE_CALENDAR_ID=your_calendar_id@group.calendar.google.com
GOOGLE_DRIVE_FOLDER_ID=your_drive_folder_id

# Email (can use same as production)
SMTP_USERNAME=info@crowwoods.com
SMTP_PASSWORD=your_smtp_password

# Stream Chat (can use same as production for testing)
STREAM_API_KEY=your_stream_api_key
STREAM_API_SECRET=your_stream_api_secret

# Access control (emails allowed to register - can be more permissive for staging)
STAGING_ALLOWED_EMAILS=*@crowwoods.com,tester@example.com
