<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.Conduit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Dialog theme -->
        <item name="dialogTheme">@style/Theme.Conduit.Dialog</item>
        <item name="alertDialogTheme">@style/Theme.Conduit.Dialog</item>

        <!-- Customize your theme here -->
    </style>

    <!-- No action bar theme -->
    <style name="Theme.Conduit.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionModeOverlay">true</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.Conduit.Splash" parent="Theme.Conduit.NoActionBar">
        <item name="android:windowBackground">@color/primary</item>
    </style>

    <!-- Stream Chat theme -->
    <style name="StreamChatTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/stream_ui_primary</item>
        <item name="colorPrimaryDark">@color/stream_ui_primary_dark</item>
        <item name="colorAccent">@color/stream_ui_accent</item>
        <item name="android:statusBarColor">@color/stream_ui_primary_dark</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="dialogTheme">@style/StreamChatDialogTheme</item>
        <item name="alertDialogTheme">@style/StreamChatDialogTheme</item>
        <item name="bottomSheetDialogTheme">@style/StreamChatBottomSheetTheme</item>
    </style>

    <!-- Dialog theme for Stream Chat dialogs -->
    <style name="StreamChatDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorPrimary">@color/stream_ui_primary</item>
        <item name="colorPrimaryVariant">@color/stream_ui_primary_dark</item>
        <item name="colorAccent">@color/stream_ui_accent</item>
        <item name="android:statusBarColor">@color/stream_ui_primary_dark</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- Dialog theme for main app dialogs -->
    <style name="Theme.Conduit.Dialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <!-- Bottom Sheet theme for Stream Chat - poll creator dialog -->
    <style name="StreamChatBottomSheetTheme" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="colorPrimary">@color/stream_ui_primary</item>
        <item name="colorPrimaryVariant">@color/stream_ui_primary_dark</item>
        <item name="colorAccent">@color/stream_ui_accent</item>
        <item name="android:statusBarColor">@color/stream_ui_primary_dark</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>
</resources>