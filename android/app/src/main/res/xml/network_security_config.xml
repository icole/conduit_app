<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext for local development -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Android emulator localhost -->
        <domain includeSubdomains="true">10.0.2.2</domain>
        <!-- Physical device localhost -->
        <domain includeSubdomains="true">localhost</domain>
        <!-- Your local network IP (update as needed) -->
        <domain includeSubdomains="true">192.168.1.0/24</domain>
    </domain-config>

    <!-- Production domain with HTTPS -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">conduit.crowwoods.com</domain>
    </domain-config>

    <!-- Default configuration for all other domains -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>