{
  "settings": {
    "screenshots_enabled": true
  },
  "rules": [
    {
      "patterns": [".*"],
      "properties": {
        "uri": "hotwire://fragment/web",
        "pull_to_refresh_enabled": true
      }
    },
    {
      "patterns": ["/documents/[^/]+/edit$"],
      "properties": {
        "uri": "hotwire://fragment/web",
        "pull_to_refresh_enabled": false
      }
    },
    {
      "patterns": ["/new$", "/edit$"],
      "properties": {
        "uri": "hotwire://fragment/web_modal",
        "context": "modal"
      }
    }
  ]
}
