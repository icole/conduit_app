#!/usr/bin/env bash
set -euo pipefail

# Load deploy-time environment variables
source .env.deploy

VERSION=$(git rev-parse HEAD)
echo "üöÄ Deploying version $VERSION"

# Ensure env secrets are available
if [ -z "${RAILS_MASTER_KEY:-}" ]; then
  echo "‚ùå RAILS_MASTER_KEY not set"
  exit 1
fi

kamal build push --version "$VERSION"
kamal deploy --version "$VERSION"

echo "‚úÖ Deployed $VERSION"
